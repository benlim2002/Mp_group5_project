<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="ui.setting.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:textSize="18sp"
            android:layout_marginBottom="20dp"
            android:text="Account Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/nameProfileET"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameTextView"
                android:layout_marginStart="7dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="-1dp"
                android:layout_toEndOf="@+id/imageView2"
                android:hint="Insert your full name here"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/imageView2"
                android:text="Name" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_name" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/usernameImageView"
                android:layout_width="44dp"
                android:layout_height="53dp"
                android:src="@drawable/ic_username" />

            <TextView
                android:id="@+id/usernameTextView"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/usernameImageView"
                android:text="Username" />

            <EditText
                android:id="@+id/usernameProfileET"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usernameTextView"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_toEndOf="@+id/usernameImageView"
                android:hint="Insert your username here"
                android:minHeight="48dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mobileImageView"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_mobile" />

            <TextView
                android:id="@+id/mobileTextView"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/mobileImageView"
                android:text="Mobile" />

            <EditText
                android:id="@+id/mobileProfileEditText"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobileTextView"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_toEndOf="@+id/mobileImageView"
                android:hint="Insert your mobile phone here"
                android:minHeight="48dp"  />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/emailImageView"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_email" />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/emailImageView"
                android:text="Email" />

            <EditText
                android:id="@+id/emailProfileEditText"
                android:layout_width="252dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/emailTextView"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-1dp"
                android:layout_marginEnd="0dp"
                android:layout_toEndOf="@+id/emailImageView"
                android:ems="10"
                android:hint="Insert your email here"
                android:inputType="textEmailAddress"
                android:minHeight="48dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="42dp"
                android:layout_height="62dp"
                android:minWidth="15sp"
                app:srcCompat="@drawable/ic_password" />

            <EditText
                android:id="@+id/passwordProfileET"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usernameTextView3"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_toEndOf="@+id/imageView3"
                android:hint="Insert your password here"
                android:inputType="textPassword"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/usernameTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/imageView3"
                android:text="Password" />

            <ImageButton
                android:id="@+id/showPwdBtn"
                android:layout_width="48dp"
                android:layout_height="42dp"
                android:layout_below="@+id/usernameTextView3"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_toEndOf="@+id/passwordProfileET"
                android:cropToPadding="false"
                android:padding="0dp"
                android:scaleType="centerInside"
                android:src="@drawable/showbutton"
                tools:ignore="SpeakableTextPresentCheck" />
        </RelativeLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
